<h1> Day Hours </h1>

<table id='dayHours' class='display'>

  <thead>
    <th class='firstColumn'> Venue </th>
    <% @days.each do |day| %>
      <% @times.each do |time| %>
        <th>
          <%= [day, time].join ' @ ' %>
        </th>
      <% end %>
    <% end %>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td class='firstColumn'>
          <%= venue.name %>
        </td>

        <% @days.each do |day| %>
          <% @times.each do |time| %>
            <td>
              <% if available? venue, day, time %>
                <span class='yes'> &#x2714 </span>
              <% else %>
                <span class='no' > &#x2718 </span>
              <% end %>
            </td>
          <% end %>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>
