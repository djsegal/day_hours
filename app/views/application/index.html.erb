<nav class="navbar navbar-default navbar-fixed-top day-hours-navbar">
  <h1> Day Hours </h1>
</nav>

<% @days.each do |day| %>

  <div class="center jumbotron">
    <%= render partial: 'day_hours_table', locals: {day: day} %>
  </div>

  <script>

    var table = $('#dayHours-<%= day %>').DataTable( {
        "scrollY": "300px",
        "scrollX": "100%",
        "scrollCollapse": true,
        "paging": false
    } );
    new $.fn.dataTable.FixedColumns( table );

  </script>

<% end %>

<%= render 'layouts/modal' %>
